<a href="/">Back</a>
{{#each recipes}}
    <h3>{{title}}</h3>
    <p>Level: {{level}}</p>
    <p>Dish type: {{dishType}}</p>
    <p>Duration: {{duration}}min</p>
    <img class="food-images" src="{{image}}" />
    <p>Ingredients:</p>
    <ul>
        {{#each ingredients}}
            <li>{{this}}</li>
        {{/each}}
    </ul>
    <p>Instructions:</p>
    <ol>
        {{#each instructions}}
            <li>{{this}}</li>
        {{/each}}
    </ol>

    <a href="/recipes/{{id}}/edit">Update</a>
    <form action="/recipes/{{id}}/delete" method="POST">
      <button>Delete</button>
    </form>
{{/each}}